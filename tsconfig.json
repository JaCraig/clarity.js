{
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "es5",
        "removeComments": true,
        "declaration": true,
        // "outFile": "clarity.min.js",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "include": [
        "build/ts/**/*.ts",
        "build/ts/**/*.vue"
    ],
    "files": [
        "build/vue-shims.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
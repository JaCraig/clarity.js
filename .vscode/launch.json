{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch localhost with sourcemaps",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8080/index.html",
			"sourceMaps": true
		},
		{
			"name": "Launch localhost in FireFox",
			"type":"firefox",
			"request": "launch",
			"url": "http://localhost:8080/index.html",
			"sourceMaps": "server",
			"webRoot": "${workspaceFolder}"
		}
	]
}